<?xml version="1.0" encoding="utf-8" ?>
<skin>
  <layout>
    <CustomWindow id="maindlg"  width="290" height="540" minwidth="290" minheight="540" xmaxwidth="553" text="QQ 2013 V0.8.220"
                  bkgnd.render.type="image" bkgnd.render.image.drawtype="stretch" bkgnd.render.image="shadow_bkg.png" bkgnd.render.image.9region="10"
                  material.render.region="6" istransparent="1" font="normal"
                  transparent.type="areo" transparent.part="" transparent.part.9region="5" >
      <RenderChain>
        <!-- 最外层边框 -->
        <DirectRenderLayer
          zorder="1"
          layout.left ="0" layout.top="0" layout.right="0" layout.bottom="0"
          bkgnd.render.type="image"
          bkgnd.render.image="fringe_bkg.png"
          bkgnd.render.image.9region="10"
          bkgnd.render.image.drawtype="stretchborder"/>
      </RenderChain>
      
      <Panel layout="stack" layout.right="5" layout.top="4" layout.direction="righttoleft">
        <Button id="sys_close"    styleclass="imagebtn"  tooltip="关闭"   bkgnd.render.image="icon_close"/>
        <Button id="sys_minimize" styleclass="imagebtn"  tooltip="最小化" bkgnd.render.image="icon_min"/>
        <Button id="btn_chnageskin"  styleclass="imagebtn"  tooltip="更改外观" bkgnd.render.image="btn_Skin"/>
      </Panel>

      <!-- 昵称 双层stack panel，保证后面的图标始终显示 -->
      <Panel layout="stack" layout.left="10" layout.right="100" layout.top="50" height="30" >
        <Panel layout="stack" layout.direction="righttoleft">
          <Panel layout="stack" width="42" height="30">
            <Button id="btn_onlinestate" styleclass="imagebtn" iconalign="center" width="20" height="20" layout.align="bottom"
                        bkgnd.render.image="btn_login_state.png" bkgnd.render.image.drawtype="stretch"
                        foregnd.render.type="imagelistitem" foregnd.render.image="login_status" foregnd.render.imagelistitem.index="0"/>
            <PictureCtrl margin="0,0,0,7" layout.align="bottom" foregnd.render.type="image" foregnd.render.image="levl_icon" width="10" height="7"/>
            <LEDCtrl id="level" margin="0,0,0,7" layout.align="bottom"  text="48" indexmap="0123456789" foregnd.render.type="imagelist" foregnd.render.image="LevelValue" />
          </Panel>
          <Label id="nickname" text="李波" textrender.font="main_dlg_nickname" textrender.type="contrastcolor" textrender.effect="halo"/>
        </Panel>
      </Panel>
      
      <!-- 工具条 -->
      <Panel id="panel_servicebar" layout="stack" layout.left="15" layout.right="15" layout.top="120" height="20">
        
      </Panel>
      <!-- 搜索 -->
      <Panel layout.left="6" layout.right="6" layout.top="143" height="28" 
        bkgnd.render.type="image" bkgnd.render.image="main_search_bkg" bkgnd.render.image.drawtype="stretch" bkgnd.render.image.9region="3">
        <Edit text="aa" istransparent="1" layout.left="3" layout.right="30" layout.top="0" layout.bottom="0" bkgnd.render.type="null"/>
        <PictureCtrl layout.right="2" layout.top="0" layout.bottom="0" bkgnd.render.type="image" bkgnd.render.image="main_search_normal"/>
      </Panel>

      <!-- 底部工具栏 -->
      <Panel id="panel_bottom" layout.left="0" layout.bottom="0" layout.right="0" height="111"
             bkgnd.render.type="image" bkgnd.render.image="main_bottom_bkg" bkgnd.render.image.drawtype="stretch" bkgnd.render.image.9region="10">
        <Button id="firend_mgr" layout.right="15" layout.bottom="15" styleclass="imagebtn" text="好友管理器" padding="2,0,1,2"
                bkgnd.render.image="button" bkgnd.render.image.drawtype="stretch" bkgnd.render.image.9region="5"/>
      </Panel>
      
      <!-- Tab -->
      <TabCtrl id="tabctrl" istransparent="1" layout.top="171" layout.left="5" layout.right="5"  layout.bottom="66" head.layout="average" head.height="34"
               contentpanel.bkgnd.render.type="image" contentpanel.bkgnd.render.image="MainPanelContainer_background" contentpanel.bkgnd.render.image.drawtype="stretch"
               contentpanel.bkgnd.render.image.9region="10">
        <item>
          <head><TabCtrlButton id="tab_contacter" styleclass="main.tabctrlbtn"/></head>
          <content>
            <ContactList id="contactlist"/>
          </content>
        </item>
        <item>
          <head><TabCtrlButton id="tab_group" styleclass="main.tabctrlbtn"/></head>
          <content>
            <Label text="this is the second panel"/>
          </content>
        </item>
        <item>
          <head><TabCtrlButton id="tab_group" styleclass="main.tabctrlbtn"/></head>
          <content>
            <Label text="this is the third panel"/>
          </content>
        </item>
      </TabCtrl>

      
    </CustomWindow>
  </layout>
</skin>  