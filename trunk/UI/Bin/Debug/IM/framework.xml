<?xml version="1.0" encoding="utf-8" ?>

<framework>
  <Module>
    <!-- 启动时加载 -->
    <startup>
      <item name="trayicon"     path="Module/trayicon.dll"/>
      <item name="config"       path="Module/config.dll"/>
      <item name="login"        path="Module/login.dll"/>
    </startup>

    <!-- 登录成功后加载 -->
    <logon>
      <item name="skin"         path="Module/skin.dll"/>
      <item name="main"         path="Module/main.dll"/>
    </logon>

    <!-- 在需要时加载 -->
    <onneed>
      <item name="privatechat"  path="Module/privatechat.dll"/>
    </onneed>
  </Module>
  
</framework>