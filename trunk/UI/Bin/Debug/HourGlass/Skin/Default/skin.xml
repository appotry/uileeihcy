<?xml version="1.0" encoding="utf-8"?>
<skin>
	<log enable="1">
		<item name="ui" enable="1" path="log\ui.log" level="debug" flag="dbgview" fileflag="disable"/>
	</log>
	<layout>
		<CustomWindow id="MainWnd" widthx="85" heightx="23" width="273" height="91" transparent.type="layered" istransparent="1" bkgnd.render.type="image" bkgnd.render.image="bk">
			<!--
			<LEDCtrl id="led" layout.left="0" layout.top="5" layout.right="0" layout.bottom="5" rejectmousemsg="1" foregnd.render.type="imagelist" foregnd.render.image="number" indexmap="0123456789:-" istransparent="1"/>
      -->
			<LEDExCtrl id="led" layout.left="18" layout.top="18" layout.right="15" layout.bottom="10" rejectmousemsg="1" istransparent="1" foregnd.render.type="image" foregnd.render.image="number2" indexmap="0123456789:" posmap="0,36;36,36;72,36;108,36;144,36;180,36;216,36;252,36;288,36;324,36;360,11"/>
		</CustomWindow>
		<Window id="Setting" width="270" height="400" text="设置">
			<GroupBox layout.left="5" layout.top="5" layout.right="5" height="140" text="时钟设置">
				<Label height="20" text="时:" layout.left="5" layout.top="5"/>
				<Label height="20" text="分:" layout.left="80" layout.top="5"/>
				<Label height="20" layout.top="5" layout.left="160" text="秒:"/>
				<Edit id="edit_hour" width="30" height="20" layout.left="25" layout.top="5"/>
				<Edit id="edit_minute" width="30" height="20" layout.left="100" layout.top="5"/>
				<Edit id="edit_second" width="30" height="20" layout.top="5" layout.left="180"/>
				<SliderCtrl id="slider_transparent" width="120" height="22" layout.left="60" layout.top="35" cursor="idc_hand" trackbtn.cursor="idc_hand"/>
				<Label id="" width="40" height="20" layout.top="35" layout.left="5" text="透明度:"/>
				<Label id="" height="20" text="色相:" layout.left="5" layout.top="65"/>
				<SliderCtrl id="slider_h" width="120" height="22" layout.left="60" layout.top="65" cursor="idc_hand" trackbtn.cursor="idc_hand"/>
				<Label height="20" layout.left="5" layout.top="95" text="饱和度:"/>
				<SliderCtrl id="slider_s" width="120" height="22" layout.top="95" layout.left="60" cursor="idc_hand" trackbtn.cursor="idc_hand"/>
			</GroupBox>
			<GroupBox text="休息设置" layout.top="170" layout.left="5" layout.right="5" height="80">
				<Label height="20" layout.top="5" layout.left="5" text="休息时间(s):"/>
				<Edit width="30" height="20" layout.top="5" layout.left="90" id="edit_breaktime"/>
				<Label id="" width="70" height="20" layout.left="5" layout.top="30" text="幻灯片目录:" textrender.align="left|vcenter"/>
				<Edit id="edit_picfolder" width="120" height="20" layout.left="90" layout.top="30"/>
				<Button id="btn_browerpicfolder" width="20" height="20" layout.left="215" layout.top="30" text="..."/>
			</GroupBox>
			<GroupBox text="其它设置" layout.left="5" layout.top="270" layout.right="5" height="50">
				<CheckButton height="20" text="播放音乐" layout.left="100" layout.top="5" textrender.align="left" id="checkbtn_music"/>
				<CheckButton id="checkbtn_autorun" width="80" height="20" layout.left="5" layout.top="5" text="开机自启动"/>
			</GroupBox>
			<Button width="60" height="24" layout.bottom="5" layout.right="80" text="确定" defpushbutton="1" id="idok"/>
			<Button width="60" height="24" layout.bottom="5" layout.right="10" text="取消" id="idcancel"/>
		</Window>
		<CustomWindow id="mask" font="normal" layout.left="0" layout.top="0" layout.right="0" layout.bottom="0" transparent.type="layered" bkgnd.render.type="null" istransparent="1">
			<Button id="idok" width="40" height="24" layout.align="center" text="" visible="1" bkgnd.render.type="null" istransparent="1" layout.right="10" layout.bottom="10" textrender.type="contrastcolor" textrender.color="black" textrender.effect="halo"/>
		</CustomWindow>
		<Menu id="mainmenu">
			<String id="1001" text="重置"></String>
			<String id="1002" text="设置"></String>
			<String id="1009" text="退出"></String>
		</Menu>
	</layout>
	<image>
		<imagelist id="number" path="number.png" layout="h" count="12"/>
		<image id="number2" path="number2.png" useskinhls="1"/>
		<image id="bk" path="bk.png" useskinhls="1"/>
	</image>
	<font>
		<item id="normal" facename="微软雅黑" size="9" bold="0"/>
		<item id="normal2" facename="宋体" size="9"/>
	</font>
	<color>
		<item id="border">0,0,0,255</item>
		<item id="dlgbk">255,255,255,255</item>
		<item id="white">255,255,255,255</item>"
  <item id="black">0,0,0,255</item>"
</color>
	<style/>
</skin>
